{
  "name": "static-website-generator",
  "version": "1.0.0",
  "description": "Build a static website without frameworks using npm scripts",
  "main": "index.js",
  "scripts": {
    "style:css": "node-sass --output-style compressed -o dist/css src/styles",
    "style:autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "style:lint": "stylelint src/styles/*.scss --syntax scss || true",
    "build:styles": "npm run style:lint && npm run style:css && npm run style:autoprefixer",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "build:scripts": "webpack --mode=production",
    "build:templates": "posthtml -c posthtml.json",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch:styles": "onchange \"src/styles\" -- npm run build:styles",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:scripts": "onchange \"src/scripts\" -- webpack --mode=development",
    "watch:templates": "onchange \"src/views\" -- npm run build:templates"
  },
  "author": {
    "name": "Tanju Yıldız",
    "email": "ben@tanjuyildiz.com",
    "url": "https://tanjuyildiz.com"
  },
  "keywords": [
    "html",
    "css",
    "javascript",
    "scss",
    "sass",
    "webpack",
    "static-site-generator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mavisland/static-website-generator.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/mavisland/static-website-generator#readme",
  "bugs": {
    "url": "https://github.com/mavisland/static-website-generator/issues"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.2",
    "htmlnano": "^0.2.5",
    "imagemin-cli": "^5.1.0",
    "node-sass": "^4.14.0",
    "onchange": "^6.1.1",
    "postcss-cli": "^7.1.0",
    "posthtml": "^0.12.3",
    "posthtml-cli": "^0.5.4",
    "posthtml-modules": "^0.6.0",
    "stylelint": "^13.3.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
